<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.view.fragments.SignInFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/email_edt_signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText" />

        <EditText
            android:id="@+id/username_edt_signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_edt_signIn"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="Username"
            android:inputType="text"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText" />

        <EditText
            android:id="@+id/password_edt_signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_edt_signIn"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText" />

        <EditText
            android:id="@+id/address_edt_signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_edt_signIn"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorAccent"
            android:hint="Address"
            android:inputType="text"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText" />

        <Button
            android:id="@+id/create_account_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_edt_signIn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_btn"
            android:elevation="10dp"
            android:text="Sign in"
            android:textColor="@color/colorText" />

    </RelativeLayout>

</FrameLayout>